#!/bin/bash

set -euo pipefail

function usage {
  echo "notify-send -m <MESSAGE> [ -c <COLOR> ] [ -p <PORT> ]"
}

COLOR_HEADER_OPT=""

while getopts "m:c:p:h" OPT; do
  case ${OPT} in
    m)
      MESSAGE=${OPTARG}
      ;;
    c)
      COLOR_HEADER_OPT="-H STUMPWM-MESSAGE-COLOR:${OPTARG}"
      ;;
    p)
      NOTIFY_SEND_STUMPWM_PORTS=${OPTARG}
      ;;
    H)
      # accept messages from an ssh session via reverse tunnel
      HOST=${OPTARG}
      ;;
    h)
      usage
      exit 0
      ;;
  esac
done

HOST="localhost"
# also send to remote client(s) connected via ssh
NOTIFY_SEND_STUMPWM_PORTS=${NOTIFY_SEND_STUMPWM_PORTS:-1959,1960,1961,1962}

EXIT_CODE=1
for PORT in $(tr ',' ' ' <<< "${NOTIFY_SEND_STUMPWM_PORTS}"); do
    curl "${HOST}:${PORT}/notify" -d "${MESSAGE}" \
         ${COLOR_HEADER_OPT} 2> /dev/null &
done

exit ${EXIT_CODE}


# Local Variables:
# mode: sh
# compile-command: "./notify-send-stumpwm -m 'hello world' -c green"
# End:
