#!/bin/bash -x

set -euo pipefail

SERVICE=${1} && shift

sudo service stop "${SERVICE}" || true
sudo systemctl disable "${SERVICE}" || true

FIND_CMD="sudo find /etc/systemd/ -name *${SERVICE}*"
${FIND_CMD}
read -p"confirm deleting the above files? "
${FIND_CMD} -exec rm {} +

# Local Variables:
# mode: sh-mode
# End:
