function shred-rec	{
    for FN in $*; do
	read -p "rec shred ${FN}?"
	if test -d "${FN}"; then
	    find "${FN}" -type f -exec shred -zuf {} \;
	    find "${FN}" -type l -exec unlink {} \;
	    find "${FN}" -depth -type d -exec rmdir {} \;
	elif test -L "${FN}"; then
            unlink "${FN}"
	else
	    shred -zufn10 "${FN}"
	fi
    done
}

