function gitignore-append-commit	{
    echo "" >> .gitignore # ensure file ends with newline
    # to avoid shell expansion, use quotes and sed to split patterns by space
    sed 's/ /\n/g' <<< "${*}" >> .gitignore
    # remove empty lines
    sed '/^[[:space:]]*$/d' -i .gitignore
    git add .gitignore
    git commit -m "gitignore ${1}"
}

