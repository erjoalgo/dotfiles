    MNT_REMOTE=$(cut -f2 -d: <<< "${MNT_SPEC}")
    test -n "${LABEL}" || return
    MNT_LOCAL=${MNT_LOCAL:-${HOME}/mnt/${LABEL}}
    mkdir -p "${MNT_LOCAL}" || return
    sshfs "${MNT_LABEL}:${MNT_REMOTE}" ${MNT_LOCAL} || return
    echo "mounted ${LABEL} on ${MNT_LOCAL}"
}

