function test-port	{
    PROTOCOL=${PROTOCOL:-tcp}
    if test $# = 1; then
        HOST=127.0.0.1
    else
        HOST="${1}" && shift
    fi

    PORT=${1} && shift

    if test ${PROTOCOL} = udp; then
        nc -vz -u ${HOST} ${PORT}
    else
        # http://stackoverflow.com/questions/9609130/quick-way-to-find-if-a-port-is-open-on-linux
        exec 6<>/dev/${PROTOCOL}/${HOST}/${PORT}
    fi
}

