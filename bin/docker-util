#!/bin/bash

set -euo pipefail

COMMAND=docker-${1} && shift
INTERACTION="-it"
while getopts "r:n:ih" OPT; do
    case ${OPT} in
        r)
            REGEXP=${OPTARG}
            ;;
        n)
            CONTAINER_NAME=${OPTARG}
            ;;
        i)
            INTERACTION="-i"
            ;;
        h)
            less $0
            exit 0
            ;;
    esac
done
shift $((OPTIND -1))

function __docker-container-lines {
    docker compose ps | sed '1d'
    docker ps | sed '1d'
}

function docker-select-container {
    if test -n "${CONTAINER_NAME:-}"; then
        docker ps -q --filter name="${CONTAINER_NAME}"
        return
    fi
    echo "select docker container: " 1>&2
    PS_OPTIONS=$(docker ps | sed '1d' | rev | cut -f1 -d' ' | rev)
    COMPOSE_PS_OPTIONS+=$(docker compose ps | sed '1d' |  \
                 tr -s ' ' | cut -f1 -d ' ')
    OPTIONS=$(echo -e "${PS_OPTIONS}\n${COMPOSE_PS_OPTIONS}")
    if test -n "${REGEXP:-}"; then
        OPTIONS=$(grep "${REGEXP}" <<< "${OPTIONS}")
    fi
    select CONTAINER_NAME in $(sort -u <<< ${OPTIONS}); do
        docker ps -q --filter name="${CONTAINER_NAME}"
        break
    done
}

function docker-container-name-to-id {
    CONTAINER_NAME=${1} && shift
    IFS=$'\n'
    LINES=$(docker ps | sed '1d' | tr -s ' ')
    for LINE in ${LINES}; do
        NAME=$(cut -f2 -d' ' <<< "${LINE}")
        if test "${CONTAINER_NAME}" = "${NAME}"; then
            # echo "${LINE}" >&2
            CONTAINER_ID=$(cut -f1 -d' ' <<< "${LINE}")
            echo "${CONTAINER_ID}"
            return
        fi
    done
    echo "error: container not found: ${CONTAINER_NAME}" >&2
    return 1
}

function docker-bash {
    CONTAINER=$(docker-select-container)
    set -x # log the exec command
    CMD=(${@})
    if test ${#CMD[@]} -eq 0; then
        CMD=(bash)
    fi
    INTERACTION_OPT=()
    if test -n "${INTERACTION:-}"; then
        INTERACTION_OPT+=("${INTERACTION}")
    fi
    docker exec ${INTERACTION[@]} --user root "${CONTAINER}" ${CMD[@]}
}

function docker-working-dir {
    CONTAINER=${1} && shift
    if ! command -v jq > /dev/null; then
        sudo apt-get install -y jq
    fi
    test -z "${CONTAINER:-}"
    docker inspect "${CONTAINER}" | jq -r '.[0].Config.WorkingDir'
}

function docker-push {
    LOCAL_PATH=${1} && shift
    REMOTE_PATH=${1:-${LOCAL_PATH}} && shift || true
    CONTAINER=$(docker-select-container)
    WORKDIR=$(docker-working-dir "${CONTAINER}")
    docker cp "${LOCAL_PATH}" "${CONTAINER}:${WORKDIR}/${REMOTE_PATH}"
}

function docker-pull {
    CONTAINER_RELPATH=${1} && shift
    CONTAINER=$(docker-select-container)
    if [[ $CONTAINER_RELPATH =~ /* ]]; then
        WORKDIR=/
    else
        WORKDIR=$(docker-working-dir "${CONTAINER}")
    fi
    docker cp "${CONTAINER}:${WORKDIR}/${CONTAINER_RELPATH}" "./"
}

function docker-kill {
    docker kill $(docker-select-container)
}

function docker-disable-restart {
    docker update --restart=no $(docker-select-container)
}

function docker-inspect {
    docker inspect $(docker-select-container)
}

function docker-locate-docker-compose-yaml {
    YAML=docker-compose.yaml
    pushd . > /dev/null
    while true; do
        if test -e "${YAML}" > /dev/null; then
            echo "$(pwd)/${YAML}"
            break
        fi
        cd ..
    done
    popd > /dev/null
}

function docker-yaml-parse-db-creds {
    YAML=${1} && shift
    LINES=$(grep -P "^ +postgres:" -A10 "${YAML}") > /dev/null
    PG_USER=$(grep -Po "(POSTGRES_USER|PG_USER)=.*" <<< "${LINES}" \
                  | grep -Po "(?<==).*") > /dev/null
    echo "${PG_USER}"
}

function docker-psql {
    SQLFILE=${1} && shift
    if test -z "${CONTAINER_NAME:-}"; then
        YAML=$(docker-locate-docker-compose-yaml)
        test -e "${YAML}"
        NAME=$(docker-yaml-parse-db-creds "${YAML}")
        test -n "${NAME:-}"
        CONTAINER_NAME="${NAME}-postgres"
    fi
    PG_DB="${PG_DB:-${NAME}}"
    PG_USER="${PG_USER:-${NAME}}"

    INTERACTION="-i"
    docker-bash psql "-U${PG_USER}" "${PG_DB}" < "${SQLFILE}"
}

function docker-logs {
    TMPFILE=$(mktemp /var/tmp/XXXXXXX.log)
    # CONTAINER=$(docker-select-container)
    # docker compose logs ${CONTAINER} --tail 10000 > "${TMPFILE}"
    docker compose logs --tail 10000 > "${TMPFILE}"
    echo "wrote logs to ${TMPFILE}"
    emacsclient-wrapper.sh -n "${TMPFILE}"
}

function main {
    ${COMMAND} ${*}
}

main ${*}

# Local Variables:
# mode: sh-mode
# End:
