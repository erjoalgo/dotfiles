#!/bin/bash -x

set -euo pipefail

function normalize  {
    FILE=${1} && shift
    sed  \
        -e 's/â€œ/"/g' \
        -e 's/,//g' \
        ${FILE}
}

wdiff \
    --start-delete '<delete>' \
    --end-delete '</delete>' \
    --start-insert '<insert>'  \
    --end-insert '</insert>' \
    -n <(normalize "$1") <(normalize "$2")

